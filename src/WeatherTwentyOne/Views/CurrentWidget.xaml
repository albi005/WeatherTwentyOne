<VerticalStackLayout
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Spacing="15"
    xmlns:views="clr-namespace:WeatherTwentyOne.Views"
    x:Class="WeatherTwentyOne.Views.CurrentWidget">

    <views:FluentIcon
        WidthRequest="200"
        HeightRequest="200"
        HorizontalOptions="Center"
        Source="partly_cloudy" />

    <Label
        Text="52℉"
        HorizontalOptions="Center"
        class="Title1" />

    <Border
        BackgroundColor="{DynamicResource Primary}"
        Stroke="Transparent"
        StrokeThickness="1"
        HorizontalOptions="Center"
        Padding="15,4">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="60" />
        </Border.StrokeShape>
        <Label
            Text="Clear"
            TextColor="{DynamicResource OnPrimary}"
            HorizontalOptions="Center"
            FontSize="18" />
    </Border>


</VerticalStackLayout>